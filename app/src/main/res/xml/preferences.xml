<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Wifi analýza">

        <ListPreference
            android:key="settings_wifi_sorting"
            android:title="Řadit Wi-Fi dle"
            android:summary="Seřazení okolních Wi-Fi"
            android:entries="@array/wifi_sorting_type"
            android:entryValues="@array/wifi_sorting_values"
            android:defaultValue="name"
            android:icon="@drawable/ic_sorting"/>

        <SwitchPreferenceCompat
            android:key="settings_enable_continuous_wifi_scan"
            android:title="Neustálý scan Wi-Fi"
            android:summary="Zapnout nebo vypnout funkci"
            android:defaultValue="false"
            android:icon="@drawable/ic_repeat"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="O aplikaci">

        <Preference
            android:key="settings_about_app_info"
            android:title="Info o aplikaci"
            android:icon="@drawable/ic_info" />

        <Preference
            android:key="settings_reset_app"
            android:title="Reset aplikace"
            android:icon="@drawable/ic_reset" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>